{
  "dashboard": {
    "title": "Fraud Detection - Overview",
    "tags": ["fraud-detection", "event-sourcing", "kafka"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Events Stored (Total)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [{
          "expr": "sum(events_stored_total)",
          "refId": "A"
        }],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1000, "color": "yellow"},
                {"value": 10000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Fraud Events Detected",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [{
          "expr": "sum(events_stored_total{event_type=\"FRAUD_DETECTED\"})",
          "refId": "A"
        }],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Event Store Write Time (p95)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [{
          "expr": "histogram_quantile(0.95, rate(event_store_write_time_seconds_bucket[5m]))",
          "refId": "A"
        }],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 0.5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Kafka Consumer Lag",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [{
          "expr": "max(kafka_consumergroup_lag)",
          "refId": "A"
        }],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 1000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Event Processing Rate (events/sec)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(events_stored_total{event_type=\"TRANSACTION_CREATED\"}[1m])",
            "refId": "A",
            "legendFormat": "Transactions"
          },
          {
            "expr": "rate(events_stored_total{event_type=\"FRAUD_DETECTED\"}[1m])",
            "refId": "B",
            "legendFormat": "Fraud Detected"
          },
          {
            "expr": "rate(events_stored_total{event_type=\"FRAUD_CLEARED\"}[1m])",
            "refId": "C",
            "legendFormat": "Fraud Cleared"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Events/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Kafka Consumer Lag by Topic",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [{
          "expr": "kafka_consumergroup_lag",
          "refId": "A",
          "legendFormat": "{{topic}}"
        }],
        "yaxes": [
          {"format": "short", "label": "Lag (messages)"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Event Store Errors",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 12},
        "targets": [{
          "expr": "rate(event_store_errors_total[1m])",
          "refId": "A",
          "legendFormat": "{{event_type}}"
        }],
        "yaxes": [
          {"format": "ops", "label": "Errors/sec"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [{
            "evaluator": {"params": [0.1], "type": "gt"},
            "operator": {"type": "and"},
            "query": {"params": ["A", "5m", "now"]},
            "reducer": {"params": [], "type": "avg"},
            "type": "query"
          }],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "name": "Event Store Error Rate Alert"
        }
      },
      {
        "id": 8,
        "title": "API Response Time (p50, p95, p99)",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_server_requests_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket[5m]))",
            "refId": "B",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_server_requests_seconds_bucket[5m]))",
            "refId": "C",
            "legendFormat": "p99"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Response Time"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Event Replay Duration",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 18},
        "targets": [{
          "expr": "event_replay_duration_seconds",
          "refId": "A",
          "legendFormat": "{{replay_type}}"
        }],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "JVM Memory Usage",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 18},
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{area=\"heap\"}",
            "refId": "A",
            "legendFormat": "Heap Used"
          },
          {
            "expr": "jvm_memory_max_bytes{area=\"heap\"}",
            "refId": "B",
            "legendFormat": "Heap Max"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ]
      }
    ]
  }
}
